[cpu-label]
color=#81A1C1
separator=false
full_text=• Cpu

[cpu]
color=#9FC6C5
interval=1
command=/usr/local/bin/cpu_usage

[ram-label]
color=#81A1C1
separator=false
full_text=• Ram

[ram]
color=#9FC6C5
interval=1
command=free | awk '/Mem/{printf("%.2f%\n"), $3/$2*100}'

[luks-label]
color=#81A1C1
separator=false
full_text=• r00t

[luks]
color=#9FC6C5
interval=60
command=df /dev/mapper/r00t | awk '(NR>1) {print $5}'

[date-label]
color=#81A1C1
separator=false
full_text=• Date

[date]
color=#9FC6C5
interval=1
command=date '+%a %d %b %H:%M'

[battery-label]
color=#B1C89D
separator=false
full_text=•

[battery]
color=#B1C89D
interval=60
command=acpi -b | cut -d, -f2 | sed 's/^[ ]//'

[network]
color=#BE9DB8
interval=30
command=[[ $(connmanctl state) =~ 'online' ]] && echo '• Online ' || echo '• Offline '

