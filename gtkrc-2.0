# File: ~/.gtkrc-2.0

# Fontconfig
gtk-xft-hinting=1
gtk-xft-rgba="rgb"
gtk-xft-antialias=1
gtk-xft-lcdfilter="lcdlight"
gtk-xft-hintstyle="hintslight"

# Look and Feel
gtk-menu-images=0
gtk-button-images=1
gtk-theme-name="Cloudy"
gtk-font-name="Segoe UI 13"
gtk-enable-event-sounds=0
gtk-enable-input-feedback-sounds=0
gtk-cursor-theme-size=0
gtk-cursor-theme-name="Oxygen_White"
gtk-toolbar-style=GTK_TOOLBAR_ICONS
gtk-toolbar-icon-size=GTK_ICON_SIZE_SMALL_TOOLBAR
gtk-icon-theme-name="evolvere-blue-folders-vivid-sunken"

# GVim background color borders
style "vimfix" { bg[NORMAL] = "#263238" }
widget "vim-main-window.*GtkForm" style "vimfix"

